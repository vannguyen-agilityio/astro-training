---
import Layout from 'layouts:Layout';
import ImagesGrid from 'components:ImagesGrid/index';
import LinkButton from 'components:LinkButton/index';
import { ROUTES } from 'src/constants/routes';
---

<Layout title="Destinies">
  <ImagesGrid />
  <LinkButton
    className="absolute xl:min-w-btn-primary px-5 py-4 top-0 left-0"
    size="primary"
    href={ROUTES.HOME}
    >Back<span
      class="ml-2 md:ml-10 text-base flex items-center justify-center w-8 h-8 rounded-full border border-white border-solid"
      >&#8592;</span
    >
  </LinkButton>
</Layout>
