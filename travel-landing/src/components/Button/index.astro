---
export interface ButtonProps {
  size?: 'primary' | 'secondary' | 'rarely';
  type?: string;
  className?: '';
  id?: string;
  href?: string;
  onclick: () => void;
}

let {
  type = 'submit',
  className = '',
  size = '',
  id = '',
  onclick = () => {}
} = Astro.props;
---

<button
  id={id}
  type={type}
  class={`p-1 min-w-btn md:min-w-btn-${size} min-h-btn md:min-h-btn-${size} text-light text-xs md:text-size-xs leading-xs ${className} bg-primary bg-${type} ${
    type === 'primary'
      ? `py-3 px-3 md:py-9 md:px-10 flex items-center leading-sm justify-between`
      : ''
  }`}
  {onclick}
>
  <slot />
</button>
