---
import Input from 'components:Input/index';
import Button from 'components:Button/index';
import Alert from 'components:Alert';

export interface ImageProps {
  className?: string;
  id?: string;
}

const { id, className } = Astro.props as ImageProps;
---

<form class={`flex flex-col xl:my-24 ${className}`}>
  <h2 class="text-2xl">Contact Us</h2>
  <p class="text-sm mb-10">Please fill this form in a decent manner</p>
  <div class="flex flex-col">
    <div class="flex flex-col mb-6">
      <label class="mb-2">Full Name <span class="text-red-500">*</span></label>
      <Input
        autofocus
        type="text"
        id="input-name"
        className="bg-white outline-none w-full xl:w-auto mb-3 xl:mb-0 pl-3"
        name="salary"
        placeholder=""
        required
        size="sm"
      />
    </div>
    <div class="flex flex-col mb-6">
      <label class="mb-2">E-mail <span class="text-red-500">*</span></label>
      <Input
        autofocus
        type="email"
        id="input-email"
        className="bg-white outline-none w-full xl:w-auto mb-3 xl:mb-0 pl-3"
        name="salary"
        placeholder=""
        required
        size="sm"
      />
    </div>
    <div class="flex flex-col mb-6">
      <label class="mb-2">Message <span class="text-red-500">*</span></label>
      <textarea
        autofocus
        type="text"
        id="input-message"
        class="bg-white outline-none w-full xl:w-auto mb-3 xl:mb-0 pl-3"
        name="salary"
        placeholder=""
        required></textarea>
    </div>
    <Button id="btn-submit" className="max-w-btn-submit mx-auto mt-4"
      >Submit</Button
    >
  </div>
  <Alert
    message="Send success"
    hasIcon={true}
    urlIcon="../check.svg"
    className="flex justify-between mt-2 alert hidden xl:max-w-alert"
  />
</form>
